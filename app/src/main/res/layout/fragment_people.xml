<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PeopleFragment">

    <LinearLayout
        android:id="@+id/PeopleFragment_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/PeopleFragment_LinearLayout_findFriends"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/PeopleFragment_Button_plusFriends"
                android:background="@drawable/createroom"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:text="친구추가"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/PeopleFragment_TextView_Search"
            android:layout_width="match_parent"
            android:text="여기는 검색을 할 것"
            android:gravity="center"
            android:layout_height="50dp" />

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/PeopleFragment_line"
        android:layout_below="@id/PeopleFragment_LinearLayout"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="1sp">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/PeopleFragment_RecyclerView"
        android:layout_below="@id/PeopleFragment_line"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>