<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainActivity_Search"
        android:layout_width="match_parent"
        android:text="여기는 검색을 할 것"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_height="50dp" />

    <FrameLayout
        android:id="@+id/MainActivity_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/MainActivity_Search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/MainActivity_BottomNavigationView">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/MainActivity_BottomNavigationView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@drawable/bottom_selection"
        app:itemIconTint="@drawable/bottom_selection"
        app:itemBackground="@color/colorAccent"
        app:menu="@menu/bottom_navigation">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>