<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="300dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:text="Find User"/>

    <Spinner
        android:id="@+id/MakeFriends_BetterSpinner"
        android:layout_width="150dp"
        android:backgroundTint="#7ed7c4"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:fontFamily="@font/d2coding_ver_1_3">

    </Spinner>

    <android.support.design.widget.TextInputLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/MakeFriends_EditText_inputCategory"
            android:layout_width="200dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:fontFamily="@font/d2coding_ver_1_3"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/MakeFriends_RecyclerView"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="40dp">

        <Button
            android:id="@+id/MakeFriends_Button_ok"
            android:text="친구추가"
            android:background="#7ed7c4"
            android:layout_width="80dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/MakeFriends_Button_cancel"
            android:text="취소"
            android:background="#7ed7c4"
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>