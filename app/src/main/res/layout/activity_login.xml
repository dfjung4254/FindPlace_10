<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:gravity="center"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/logo"
            android:background="#3f000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="20dp"
            android:textSize="40sp"
            android:text="FIND PLACE"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:background="#3f000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/LoginActivity_EditText_email"
                android:hint="EMAIL (ex: abc12@gmail.com)"
                android:background="#13000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/LoginActivity_EditText_password"
                android:hint="PASSWORD"
                android:background="#13000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/LoginActivity_Button_login"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="l o g i n"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@layout/round_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/LoginActivity_Button_signUp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="s i g n  u p"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@layout/round_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>